#! /bin/bash
#
# Dem bash aliases

# System aliases
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# editor
alias e='emacs -nw'

# rspec fix
alias spec='spec --color --format specdoc'

# misc utilities
alias background='gconftool-2 -t string -s /desktop/gnome/background/picture_filename '
alias screenshot='sleep 15; import -window root screen_shot.png;'

#git
alias ga='git add -A '
alias gc='git commit '
alias gp='git push '
alias gr='git rebase '
alias gs='git status'

# opening things
alias go='gnome-open '

# editor
export EDITOR="emacs -nw "

# utilities
export wat="netstat -anp "