Config { font = "-*-xft:DejaVu Sans Mono Book-10-*-13-*-*-*-*-*-*-*"
       , bgColor = "#222222"
       , fgColor = "#90FFA4"
       , position = TopW R 100
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","#90FFA4","--high","#D46060"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "}{%cpu% | %memory% | %date% "
       }